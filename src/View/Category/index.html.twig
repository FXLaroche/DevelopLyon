{% extends 'layout.html.twig' %}

{% block content %}

	<div class="container">
		<h1>Bienvenue sur le forum DevelopLyon !</h1>

		<div class="container d-flex flex-wrap justify-content-around">
			{% for category in categorys %}

				<a class="h2_category" href="themes/index?id={{ category.id }}">
					<div class="home_image d-flex align-items-center justify-content-center" style="background-image: url('/assets/images/{{category.picture_link}}')">
						<h2 class="h2_category">{{ category.name }}</h2>
					</div>
				</a>
				


			{% endfor %}
		
		</div>


	</div>

{% endblock %}
