<header class="p-3 mb-3 border-bottom">
	<div class="container-flex">
		<div class="row">

			<nav class="col-auto navbar navbar-expand-lg navbar-light me-auto d-flex align-items-start">
				<div class="container-fluid">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
						<span class="bi bi-list-ul"></span>
					</button>
					<div class="container-flex collapse navbar-collapse" id="navbarMenu">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="/">Accueil</a>
							</li>
							{% if categoryList is not empty %}
								{% set sectionName = 'Catégories' %}
								{% set table = categoryList %}
								{% set url = '/themes/index?id' %}
								{% include "dropdown.html.twig" %}
							{% endif %}
							{% if themeList is not empty %}
								{% set sectionName = 'Thèmes' %}
								{% set table = themeList %}
								{% set url = '/posts/index?theme' %}
								{% include "dropdown.html.twig" %}
							{% endif %}
							{% if nickname is not empty %}
								<a href="/post/add" class="nav-link"><b>Ajouter un post</b></a>
							{% endif %}

						</ul>
					</div>
				</div>
			</nav>

			<nav class="col-auto navbar navbar-expand-lg navbar-light d-flex align-items-start">
				<form class="container-fluid d-flex justify-content-end" role="search" action="/posts/search" method='POST'>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSearch" aria-controls="navbarSearch" aria-expanded="false" aria-label="Toggle navigation">
						<span class="bi bi-search"></span>
					</button>
					<div class="container-flex mt-2 collapse navbar-collapse" id="navbarSearch">

						<input type="search" id="maRecherche" name="maRecherche" placeholder="Rechercher un post…" aria-label="Rechercher parmi le contenu du site" onkeyup="check(this)" onchange="check(this)">
						<datalist id="maRecherche">
							{% for search in searchs %}
								<option value="{{ search.word }}"></option>
							{% endfor %}
						</datalist>
						<button>Rechercher</button>
					</div>
				</form>
			</nav>

			<nav class="col-auto navbar navbar-expand-lg navbar-light col-auto d-flex align-items-start">
				<div class="container-fluid d-flex justify-content-end">
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarConnect" aria-controls="navbarSearch" aria-expanded="false" aria-label="Toggle navigation">
						<span class="bi bi-person-circle"></span>
					</button>
					<div class="text-end container-flex collapse navbar-collapse" id="navbarConnect">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a href="/user/{{connectionLink}}" class="nav-link px-2 link-dark">{{connectionOption}}</a>
							</li>
							<li class="nav-item">
								<a href="/user/{{profileLink}}" class="nav-link px-2 link-dark">{{profileOption}}</a>
							</li>
							{% if role == 'admin' %}
							<li class="nav-item">
								<a href="/users" class="nav-link px-2 link-dark">Liste des utilisateurs</a>
							</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		</div>
	</div>
</header>
