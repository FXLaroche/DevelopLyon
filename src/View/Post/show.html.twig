{% extends "layout.html.twig" %}
{% block title %} <h1> Afficher un poste <h1>{% endblock %}
{% block content %}
 <h1>Post {{ post.title }}</h1>
    <p>{{ post.id }}. {{ post.title }}</p>
    <p> {{ post.subject}}</p>
    <p>{{ post.user_id}}</p>
    <p>{{ post.theme_id}}</p>
    <p>{{ post.date}}</p>
    <p>{{ post.message}}</p>
    <a href="/items/edit?id={{ item.id }}">Edit</a>
    <form action="/items/delete" method="POST">
        <input type="hidden" name="id" value="{{ item.id }}">
        <button>Delete</button>
    </form>
    <a href="/items">Back</a>


{% endblock %}

