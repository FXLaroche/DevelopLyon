{% extends "layout.html.twig" %}
{% block title %}
	<h1>Afficher un poste</h1>
{% endblock %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/searchStyle.css">
{% endblock %}
{% block content %}
	<div class="container">

		<div class="searchResult container">

			<div class="post row">
				<div class="data_user col-lg-2 text-center">
					{% if post.picture_link == NULL %}
						<img src="/assets/images/index.png" class="img-fluid rounded-circle" alt="{{ post.nickname }} photo">
					{% else %}
						<img src="/assets/images/{{ post.picture_link }}" class="img-fluid rounded-circle" alt="{{ post.nickname }} photo">
					{% endif %}
					<p>{{ post.nickname }}</p>
				</div>
				<div class="data_post col-lg-10 align-items-start">
					<div>
						<p class="col-md-10">{{ post.subject }}</p>
						<p class="col-md-10">{{ post.message }}</p>
					</div>
					<div class="row align-item-end text-end">
					{% if post.user_id == id or role == "admin" %}
					<p><a href="/post/edit?id={{post.post_id}}"><button class="btn btn-primary">Editer</button></a></p>
					<p><a href="/post/delete?id={{post.post_id}}"><button class="btn btn-primary">Supprimer</button></a></p>
					{% endif %}
						<p>le
							{{ post.date|date("d/m/Y") }}
							à
							{{ post.date|date('H:i') }}</p>
					</div>
				</div>
			</div>
			{% for message in messages %}
				<div class="message row">
					<div class="data_user col-lg-2 text-center">
						{% if message.picture_link == NULL %}
							<img src="/assets/images/index.png" class="img-fluid rounded-circle" alt="{{ message.nickname }} photo">
						{% else %}
							<img src="/assets/images/{{ message.picture_link }}" class="img-fluid rounded-circle" alt="{{ message.nickname }} photo">
						{% endif %}
						<p>{{ message.nickname }}</p>
					</div>
					<div class="data_post col-lg-10 align-items-start">
						<div>
							<p class="col-md-10">{{ message.message }}</p>
						</div>
						<div class="row align-item-end text-end">
							<p>le
								{{ message.date|date("d/m/Y") }}
								à
								{{ message.date|date('H:i') }}</p>
						</div>
						{% if nickname == message.nickname %}
							<div class="updateForm">
								<form class="" action="Message/edit?id={{ message.id }}" method="post" accept-charset="UTF-8">
									<input type="hidden" id="user_id" name="user_id" value="{{ id }}">
									<input type="hidden" id="post_id" name="post_id" value="{{ post.id }}">
									<input type="hidden" name="id" value="{{ message.id }}">
									<p class="row">
										<label>Modification du message :
										</label>
										<textarea class="form-controle" name="message">{{ message.message }}</textarea>
									</p>
									<p class="row">
										<button class="form-controle" type="submit">Enregistrer les modifications</button>
									</p>
								</form>
							</div>
							<div class="row">
								<form class="col" action="/message/delete" method="post">
									<input type="hidden" id="post_id" name="post_id" value="{{ post.id }}">
									<input type="hidden" name="id" value="{{ message.id }}">
									<button type="submit" class="btn btn-primary mb-2">Supprimer le message</button>
									<button type="button" class="btn btn-primary mb-2 updateButton">Modifier le message</button>
								</form>
							</div>
						{% endif %}
					</div>
				</div>
			{% endfor %}
			{% if nickname is not empty %}
				<div class="newmessage row">
					<form action="Message/add" method="post" accept-charset="UTF-8">
						<input type="hidden" id="user_id" name="user_id" value="{{ id }}">
						<input type="hidden" id="post_id" name="post_id" value="{{ post.id }}">
						<p class="row">
							<label>Nouveau message :
							</label>
							<textarea class="form-controle" name="message"></textarea>
						</p>
						<p class="row">
							<button class="form-controle" type="submit">Poster le message</button>
						</p>
					</form>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
{% block javascript %}
<script src="/assets/js/script.js">
	{% endblock %}
