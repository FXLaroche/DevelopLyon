{% extends "layout.html.twig" %}
{% block title %}{{parent()}}Create post {% endblock %}
{% block content %}
	<div>
		<form action="" method="post">
        <input type="hidden" name="nickname" value="Effix">
        <input type="hidden" name="theme_name" value="POO for noobs">
			<label for="subject">Title:
			</label>
			<input type="text" name="subject" id="subject" maxlength="255" required>
		</div>
		<div>
			<label for="message">Your message:
			</label>
			<textarea name="message" id="message" cols="30" rows="10"></textarea>
		</div>
		<div>
			<input type="submit" value="Post">
		</div>
	</form>
{% endblock %}
