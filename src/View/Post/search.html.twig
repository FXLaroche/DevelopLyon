{% extends 'layout.html.twig' %}

{% block title %}Résultats de recherche
{% endblock %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/searchStyle.css">
{% endblock %}

{% block content %}

	<div class="container">

		<h1>Résultat de votre recherche</div>

		<div class="searchResult container">
			{% for result in results %}

				<div class="post row">
					<div class="data_user col-lg-2 text-center">
						{% if result.picture_link == NULL %}
							<img src="/assets/images/index.png" class="rounded-circle" alt="{{ result.nickname }} photo">
						{% else %}
							<img src="/assets/images/{{ result.picture_link }}" class="rounded-circle" alt="{{ result.nickname }} photo">
						{% endif %}
						<p>{{ result.nickname }}</p>
					</div>
					<div class="row data_post col-lg">
						<div>
							<p>{{ result.subject }}</p>
						</div>
						<div class="align-self-end text-end">
							<p>le
								{{ result.date|date("d/m/Y") }}
								à
								{{ result.date|date('H:i') }}</p>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>

{% endblock %}
