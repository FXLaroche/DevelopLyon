<form name="image" enctype="multipart/form-data" method="post">
<div class="container d-flex flex-row justify-content-around align-items-center mb-3">
	<div class="profile_image" style="background-image: url('/assets/images/{{user.picture_link}}')"></div>
    <input type="file" name="profile_image">
	<p class="mb-0">{{ user.picture_link }}</p>
</div>
<div class="container form-group">
	<input type="hidden" class="form-control mb-3" value="{{ user.id }}" name="id">
</div>
<div class="container form-group">
	<input type="text" class="form-control mb-3" value="{{ user.nickname }}" name="nickname">
</div>
<div class="container form-group">
    <input type="text" class="form-control mb-3" value="{{ user.email }}" name="email">
</div>
<div class="container form-group">
    <input type="text" class="form-control mb-3" placeholder="Mot de passe" name="password">
</div>
<div class=" container d-flex flex-column align-items-center">
	<input type="submit" value="Sauvegarder les modifications" class="btn btn-primary mb-2">
</div>
</form>
<div class="container d-flex flex-column align-items-center">
    <a href="/user/show?id={{user.id}}" class="btn btn-primary mb-2">Retour</a>
</div>