{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Liste des utilisateurs</h1>
    <form action="" method="post">
        <div class="container d-flex flex-column align-items-center">
        {% for user in users %}
        <div class="user">
            <input type="checkbox" name="suppr[]" value ="{{user.id}}">
            <a href="/user/show?id={{ user.id }}">{{ user.nickname }}</a>
        </div>
        {% else %}
            <p>Aucun utilisateur</p>
        {% endfor %}
        <button class="btn btn-primary mb-2">Delete</button>
        </div>
    </form>
    <section class="container d-flex flex-column align-items-center">
        <a href="/user/add" class="btn btn-primary mb-2">Ajouter</a>
        <a href="/user/add" class="btn btn-primary mb-2">Supprimer l'utilisateur</a>
    </section>
{% endblock %}
